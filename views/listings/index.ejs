<% layout("/layouts/boilerplate") %>   
<body>
  <!--<h3>All listings</h3>--> 
  <!-- <form method="GET" action="/listings/new">
        <button>LIST</button>
    </form>-->
     <style>
      #filters{
        display:flex;
      }
      .filter{
           margin-top: 2rem;
           margin-right: 2rem;
           text-align: center;
           opacity:0.7;
      }
      .filter1{
        margin-top: 2.5rem;
        margin-left: 3rem;
        border: 2px,solid,black;
        border-radius:1rem;
        height:3rem; 
        padding:2px;
      }
      .filter:hover{
        opacity:1;
        cursor: pointer;
      }
      .filters p{
        font-size: 0.8rem;
      }
      .tax-info{
        display:none;
      }

     </style>


    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p> 
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-sharp fa-solid fa-mountain-sun"></i></div>
        <p>mountain</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-sharp fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter1">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Total after taxes</label>
        </div>
      </div>
  </div>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
       <% for (let list of allListings){ %>
        <a href="/listings/<%= list._id %>" class="listing-link" >
          <div class="card col listing-card" >
            <img src="<%=list.image.url%>" class="card-img-top" alt="listing-imgae"style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                 <b><%= list.title %></b>  <br />
                &#8377;<%= list.price.toLocaleString("en-IN")%>/night <br>
                <i class="tax-info"> +18% GST</i>
              </p>
            </div>
          </div> 
        </a>
          <%}%>
        </div>

        <script>
          let priceToggle=document.querySelector("#flexSwitchCheckDefault");
          priceToggle.addEventListener("click",(event)=>{
          let icons =document.getElementsByClassName("tax-info");
           for(i of icons){
            if(i.style.display != "inline"){
            i.style.display="inline";
           }else{
            i.style.display="none";
           }
          }
          })
        </script>




</body>

